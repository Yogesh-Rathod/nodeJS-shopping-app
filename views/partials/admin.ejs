<div class="container-fluid">
	<div class="jumbotron">
		<h1 class="h1">Welcome Admin!</h1>
	</div>
	<div class="container">
		<h2>Add New Product Below</h2>

		<%- messages() %>

		<form action="/productSave" method="POST" enctype="multipart/form-data">
			<div class="form-group row">
				<label for="example-text-input" class="col-2 col-form-label">Product Title</label>
				<div class="col-10">
					<input class="form-control" type="text" value="" id="example-text-input" name="title">
				</div>
			</div>
			<div class="form-group row">
				<label for="example-search-input" class="col-2 col-form-label">Description</label>
				<div class="col-10">
					<textarea  class="form-control" value="" id="example-search-input" name="description"></textarea>
				</div>
			</div>
			<div class="form-group row">
				<label for="example-email-input" class="col-2 col-form-label">Product Price</label>
				<div class="col-10">
					<input class="form-control" type="text" name="price" id="example-email-input">
				</div>
			</div>
			<div class="form-group row">
				<label for="example-url-input" class="col-2 col-form-label">Additional Information</label>
				<div class="col-10">
					<textarea  class="form-control" value="" id="example-search-input" name="information"></textarea>
				</div>
			</div>
			<div class="form-group row">
				<label for="example-url-input" class="col-2 col-form-label">Product Image</label>
				<div class="col-10">
					<input class="form-control" type="file" name="productImage" id="">
				</div>
			</div>
			<div class="form-group row">
				<div class="col-10">
					<input type="submit" name="submit" value="Submit" class="btn btn-success">
				</div>
			</div>
			<br>
			<hr>
			<br>
			<h2>List of All Products is Below</h2>
			<div class="admin-products-container clearfix">
				<table class="col-xs-12">
					<thead>
						<tr class="clearfix">
							<th class="col-xs-2"><span>Sr. No.</span></th>
							<th class="col-xs-2"><span>Title</span></th>
							<th class="col-xs-2"><span>Image</span></th>
							<th class="col-xs-2"><span>Price</span></th>
							<th class="col-xs-2"><span>Action</span></th>
						</tr>
					</thead>
					<tbody>
						<% if(products){ %>
							<% if(products.length == 0 ) { %>
								<tr class="text-center">
									<td class="col-xs-2"></td>
									<td class="col-xs-2"></td>
									<td class="col-xs-2">No Products Found!</td>
									<td class="col-xs-2"></td>
									<td class="col-xs-2"></td>
								</tr>
							<% } else { %>
								<% products.forEach(function(products, index) { %>
									<tr class="clearfix">
										<td class="col-xs-2"><span><%= index + 1 %></span></td>
										<td class="col-xs-2"><span><%= products.title %></span></td>
										<td class="col-xs-2"><span><img src="/images/products/<%= products.image %>" alt="Image" class="img-responsive"></span></td>
										<td class="col-xs-2">&#8377;<span><%= products.price %></span></td>
										<td class="col-xs-2">
											<a href="/edit/<%= products.id %>" class="btn btn-default">Edit</a>
											<a href="/delete/<%= products.id %>" class="btn btn-danger">Delete</a>
										</td>
									</tr>
								<% }); %>
							<% } } %>
					</tbody>
				</table>
			</div>
		</form>

	</div>
</div>